//como funciona for
var AccionPrepararPantalla = function() {
  FuncionCargarEventosIniciales();
  FuncionCargarDatosIniciales();
}

var AccionAceptar = function() {
  let Valor = 1;
  for (let i = 5; i > 0; i--) {
    Valor = Valor * i;
  }

  FuncionMostrarResultado(Valor, true);
}

//Otra opci√≥n
var AccionPrepararPantalla = function() {
  FuncionCargarEventosIniciales();
  FuncionCargarDatosIniciales();
}

var AccionAceptar = function() {
  let Valor = "";
  for (let i = 0; i < 10; i += 3) {
    Valor = Valor + "AVG";
  }

  FuncionMostrarResultado(Valor, true);
}
