// Cambiar color de fondo de los botones al hacer hover
const buttons = document.querySelectorAll('.big-button');

buttons.forEach(button => {
    button.addEventListener('mouseover', () => {
        button.style.backgroundColor = '#3498db'; // Azul al pasar el mouse
    });
    button.addEventListener('mouseout', () => {
        button.style.backgroundColor = '#f4f4f4'; // Vuelve al color original
    });
});

// Función para navegar entre las páginas de forma dinámica
const navigateButtons = document.querySelectorAll('a'); // Selecciona todos los enlaces

navigateButtons.forEach(button => {
    button.addEventListener('click', () => {
        window.location.href = button.getAttribute('href'); // Cambia la página según el enlace
    });
});

// Mostrar un mensaje de bienvenida en la consola cuando se carga la página (solo en index.html)
if (window.location.pathname.includes('index.html')) {
    window.addEventListener('load', () => {
        console.log("¡Bienvenido a nuestra página!");
    });
}
